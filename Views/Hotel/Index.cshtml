@model IEnumerable<Primeruso.Models.dbModels.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreHotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHotel">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdHotel">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHotel">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
